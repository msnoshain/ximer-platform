<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="XimerGameClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:XimerGameClient"
    xmlns:account="clr-namespace:XimerGameClient.Views.Account"
    xmlns:common="clr-namespace:XimerGameClient.Views.Common">

    <ShellContent
        Title="LoadingPage"
        ContentTemplate="{DataTemplate common:LoadingPage}"
        Route="LoadingPage" 
        FlyoutItemIsVisible="False"/>

    <FlyoutItem 
        FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent
            Title="登录"
            ContentTemplate="{DataTemplate account:LoginPage}"
            Route="LoginPage" />

    </FlyoutItem>

</Shell>
