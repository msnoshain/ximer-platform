<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XimerGameClient.Resources.ControlTemplates"
             xmlns:vm="clr-namespace:XimerGameClient.ViewModels.Account"
             xmlns:generic="clr-namespace:System.Collections.Generic;assembly=netstandard"
             x:Class="XimerGameClient.Views.Account.LoginPage"
             x:Name="Top"
             x:DataType="vm:LoginViewModel"
             Title="{Binding Title}" >

    <ContentPage.Resources>

        <StyleSheet Source="/Resources/Styles/common.css" />

    </ContentPage.Resources>

    <VerticalStackLayout 
            MaximumWidthRequest="400"
            VerticalOptions="CenterAndExpand">

        <Image 
            Source="dotnet_bot.png"
            WidthRequest="160"
            HorizontalOptions="Center"
            Margin="0,60,0,48"/>

        <Entry 
            StyleClass="m20, char-lim32, font-med"
            Placeholder="账户"/>

        <Entry 
            StyleClass="m20, char-lim32, font-med"
            Placeholder="密码"
            IsPassword="True"/>

        <Label 
            Text="账号或密码错误"
            StyleClass="m20, error-text"/>

        <Button 
            Text="登录"
            StyleClass="m20, font-med"
            WidthRequest="80"
            Command="{Binding GetTCommand}"
            CommandParameter="{Binding Source={RelativeSource AncestorType={x:Type Shell}}}"/>

        <HorizontalStackLayout
            HorizontalOptions="Center"
            Margin="0,48,0,0">

            <Label 
                Text="记住密码"
                StyleClass="font-small"
                VerticalTextAlignment="Center"/>

            <CheckBox/>

            <Label 
                Margin="32,0"/>

            <Label 
                Text="自动登录"
                StyleClass="font-small"
                VerticalTextAlignment="Center"/>

            <CheckBox/>

        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>