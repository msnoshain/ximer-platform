<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="XimerGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:XimerGame"
    xmlns:account="clr-namespace:XimerGame.Views.Account"
    xmlns:common="clr-namespace:XimerGame.Views.Common"
    Shell.FlyoutBehavior="Disabled"
    WidthRequest="600"
    HeightRequest="420">

    <ShellContent
        Title="加载中..."
        ContentTemplate="{DataTemplate common:LoadingPage}"
        Route="LoadingPage" />

    <FlyoutItem 
        FlyoutDisplayOptions="AsMultipleItems">
        
        <ShellContent
            Title="登录"
            ContentTemplate="{DataTemplate account:LoginPage}"
            Route="LoginPage" />
        
    </FlyoutItem>

</Shell>
